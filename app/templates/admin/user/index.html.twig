{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.task_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.category_list'|trans }}</h1>
    <a type="button" class="btn btn-success float-end" href="{{ url('app_register') }}">Add</a>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center mt-3">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'user.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.email'|trans, 'user.email') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.password'|trans, 'user.password') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.roles'|trans, 'user.roles') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.is_banned'|trans, 'user.is_banned') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.joined'|trans, 'user.joined') }}</th>
                <th>{{ 'label.show'|trans }}</th>
                <th>{{ 'label.edit'|trans }}</th>
                <th>{{ 'label.delete'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for user in pagination.items %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.password }}</td>
                    <td>{% for role in user.roles %}
                            {{ role }}
                        {% endfor %}
                    <td>{{ user.isBanned ? 'yes' : 'no' }}</td>
                    <td>{{ user.joined|format_datetime }}</td>
                    <td>
                        <a type="button" class="btn btn-primary"
                           href="{{ url( 'admin_view_user', {id: user.id}) }}">
                            {{ 'user_view'|trans }}
                        </a>
                    </td>
                    <td>
                        <a type="button" class="btn btn-info"
                           href="{{ url(  'admin_edit_user', {id: user.id}) }}">
                            {{ 'user_edit'|trans }}
                        </a>
                    </td>
                    <td>
                        <a type="button" class="btn btn-danger"
                           href="{{ url(  'admin_delete_user', {id: user.id}) }}">
                            {{ 'user_delete'|trans }}
                        </a>
                    </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}