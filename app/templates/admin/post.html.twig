{% extends 'base.html.twig' %}

{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.task_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.task_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'post.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'post.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.content'|trans, 'post.content') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.published'|trans, 'post.published') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.edited'|trans, 'post.edited') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.views'|trans, 'post.views') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_category'|trans, 'post.category') }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for post in pagination.items %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.content }}</td>
                    <td>{{ post.published }}</td>
                    <td>{{ post.created|format_date('long') }}</td>
                    <td>{{ post.edited|format_date('long') }}</td>
                    <td>{{ post.views }}</td>
                    <td>{{ post.category }}</td>
                    <td>{{ post.category.title }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}